{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["/*"],
            "@styles/*": ["styles/*"],
            "@components/*": ["components/*"],
            "@package/*": ["../package/*"],
            "@lib/*": ["../package/lib/*"],
            "@assets/*": ["data/assets/*"],
            "@services/*": ["services/*"],
            "@store/*": ["store/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/app/login/page.jsx"
    ],
    "exclude": ["node_modules"]
}
